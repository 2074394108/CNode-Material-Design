<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cnodejs.android.md">

    <application
        android:name="org.cnodejs.android.md.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.cnodejs.android.md.activity.LogoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.LogoPage"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.cnodejs.android.md.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.FitsStatusBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />



    </application>

</manifest>
