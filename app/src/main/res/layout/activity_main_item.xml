<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/main_item_img_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@drawable/image_default"
            android:scaleType="fitCenter"
            app:siBorderAlpha="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/main_item_tv_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/main_item_tv_time"
                    android:layout_toLeftOf="@+id/main_item_tv_time"
                    android:textColor="@color/text_color_primary"
                    android:textSize="16sp"
                    tools:text="昵称" />

                <TextView
                    android:id="@+id/main_item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_primary"
                    android:textSize="14sp"
                    tools:text="1天前" />

            </RelativeLayout>

            <TextView
                android:id="@+id/main_item_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color_secondary"
                android:textSize="14sp"
                tools:text="内容" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/AppTheme.DeepLine" />

</LinearLayout>